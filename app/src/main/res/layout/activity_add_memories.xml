<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddMemories"
    android:background="@drawable/background_grad">


    <ImageView
        android:id="@+id/memoriesPic"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/white"/>

   <!-- <Button
        android:id="@+id/memoriesTakePicture"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Capture Image"
        android:textAllCaps="false" />-->

    <android.support.design.widget.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"

        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/memoriesCaption"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Enter your caption"
            android:inputType="text"
            android:textColor="@color/white"
            android:paddingTop="40dp"
            android:imeOptions="actionDone"
            />

    </android.support.design.widget.TextInputLayout>



    <ProgressBar
        android:id="@+id/proessbar"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <Button
        android:id="@+id/memoriesSave"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Save Memories"
        android:textAllCaps="false"
        android:background="@drawable/bgbtn"/>


</LinearLayout>